<script language="javascript">
<!--

function confirmDelete () { //table, key) {
	return confirm ('Are you sure you want to delete the selected items?'); //"' + table + '/' + key + '"?');
}

var myadm_select_switch = false;

function selectAll (f) {
	if (myadm_select_switch == false) {
		for (i = 0; i < f.elements.length; i++) {
			f.elements[i].checked = true;
			myadm_select_switch = true;
		}
	} else {
		for (i = 0; i < f.elements.length; i++) {
			f.elements[i].checked = false;
			myadm_select_switch = false;
		}
	}
	return false;
}

