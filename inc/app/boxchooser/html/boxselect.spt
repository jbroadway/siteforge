<html>
	<head>
		<title>Box Chooser/{name}</title>
		<script language="javascript" type="text/javascript" src="/js/dialog.js"></script>
		<script language="javascript">
		<!--

{spt js.spt}

		// -->
		</script>
		<style type="text/css">

			body {
				font: 12px Verdana, Arial, sans-serif;
				margin: 0px;
			}

			td {
				font: 12px Verdana, Arial, sans-serif;
				padding: 3px;
			}

			.odd {
				background-color: #fff;
			}

			.even {
				background-color: #eee;
			}

			table {
				width: 94%;
			}

			p#stripe {
				width: 100%;
				padding-top: 0px;
				padding-left: 0px;
				padding-right: 0px;
				margin-top: 0px;
				margin-left: 0px;
				margin-right: 0px;
				background-color: #0081d6;
			}

			h1,h2,h3,p,table {
				margin: 10px;
			}

			hr {
				border: 0px none;
				height: 1px;
				background-color: #999;
				margin-left: 10px;
				margin-right: 10px;
			}

			a {
				color: #0081d6;
				text-decoration: none;
			}

			a:hover {
				text-decoration: underline;
			}

			h1 {
				color: #0081d6;
				font-size: 16px;
			}

			h2 {
				color: #0081d6;
				font-size: 14px;
				font-weight: normal;
			}

			.err {
				color: #900;
			}

		</style>
	</head>
	<body onload="if (opener) opener.blockEvents ()" onunload="if (opener) opener.unblockEvents ()"><a name="top"></a>

<p id="stripe">&nbsp;</p>

<h1>Choose a Box from {appname}</h1>

<p>
	<a href="javascript: history.go (-1)">{intl Back}</a> &nbsp; &nbsp;
	<a href="javascript: window.close ()">{intl Cancel}</a> &nbsp; &nbsp;
</p>

{if count (obj[boxes]) gt 0}

{alt even odd}

<table cellspacing="0">
	{loop obj[boxes]}
		<tr class="{alt/next}">
			<td>
				<a href="{site/prefix}/index/boxchooser-settings-form?name={name}&box={loop/box}&appname={loop/appname}&app={loop/app}" title="{loop/description}">{loop/appname}</a>
			</td>
		</tr>
	{end loop}
</table>

{end if}
{if else}
	<p>No boxes available.</p>
{end if}

<p align="right"><a href="#top">[ {intl top} ]</a></p>

