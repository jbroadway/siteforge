<html>
	<head>
		<title>{page/title}</title>
		<style type="text/css">

			body {
				font: 12px Verdana, Arial, sans-serif;
				margin: 0px;
			}

			td {
				font: 12px Verdana, Arial, sans-serif;
				padding: 3px;
			}

			.odd {
				background-color: #fff;
			}

			.even {
				background-color: #eee;
			}

			table {
				width: 100%;
			}

			p#stripe {
				width: 100%;
				padding-top: 0px;
				padding-left: 0px;
				padding-right: 0px;
				margin-top: 0px;
				margin-left: 0px;
				margin-right: 0px;
				background-color: #0081d6;
			}

			h1,h2,h3,p,table {
				margin: 10px;
			}

			hr {
				border: 0px none;
				height: 1px;
				background-color: #999;
				margin-left: 10px;
				margin-right: 10px;
			}

			a {
				color: #0081d6;
				text-decoration: none;
			}

			a:hover {
				text-decoration: underline;
			}

			h1 {
				color: #0081d6;
				font-size: 16px;
			}

			h2 {
				color: #0081d6;
				font-size: 14px;
				font-weight: normal;
			}

			.err {
				color: #900;
			}

		</style>
	</head>
	<body><a name="top"></a>

<p id="stripe">&nbsp;</p>

<h1>{page/title}</h1>

<p>
	<a href="javascript: window.location.href = '{site/prefix}/index/imagechooser{app}{filter urlencode}?name={cgi/name}&location={location}&format={cgi/format}&attrs={cgi/attrs}{end filter}'">{intl Back}</a>
</p>

{if obj[err]}
	<p class="err">{err}</p>
{end if}

<form method="post" action="{site/prefix}/index/imagechooser-new-action" enctype="multipart/form-data">
<table cellspacing="0">
	<tr>
		<td>{intl Find the file}</td>
		<td><input type="file" name="file" /></td>
	</tr>
	<tr>
		<td>{intl Save as}<br />({intl leave blank for current name})</td>
		<td valign="top"><input type="text" name="filename" value="{cgi/filename}" /></td>
	</tr>
	<tr>
		<td>&nbsp;</td>
		<td><input type="submit" value="{intl Add File}" /></td>
	</tr>
</table>
<input type="hidden" name="format" value="{cgi/format}" />
<input type="hidden" name="location" value="{cgi/location}" />
<input type="hidden" name="attrs" value="{cgi/attrs}" />
<input type="hidden" name="name" value="{cgi/name}" />
<input type="hidden" name="admin" value="{cgi/admin}" />
</form>

<p><a href="#top">[ {intl top} ]</a></p>

