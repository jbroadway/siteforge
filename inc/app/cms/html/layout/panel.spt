<!-- select box form -->

<p align="center" id="panel-{name}-label">
	<strong
		style="font-weight: bold; font-size: 11px; padding: 3px; border: 1px solid #999"
		onmouseover="panel_show ('panel-{name}')"
		onmouseout="sdmMouseExitMenu()"
	>&nbsp;&nbsp;{caption}&nbsp;&nbsp;<img src="{site/prefix}/inc/app/cms/pix/panel-down.gif" alt="{caption}" border="0" />&nbsp;&nbsp;</strong>
</p>

